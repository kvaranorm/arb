-- Check Game
if game.PlaceId == 96063223159256 then
    local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
    local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
    local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

    local currentVersion = "ARB: Script v2 (Testing)"

    local Window = Fluent:CreateWindow({
        Title = currentVersion,
        SubTitle = "by xyro",
        TabWidth = 160,
        Size = UDim2.fromOffset(580, 460),
        Acrylic = true,
        Theme = "Dark",
        MinimizeKey = Enum.KeyCode.LeftControl
    })

    local Tabs = {
        Spinning = Window:AddTab({ Title = "Spinning", Icon = "rotate-ccw" }),
        Players = Window:AddTab({ Title = "Players", Icon = "users" }),
        Meditation = Window:AddTab({ Title = "Meditation", Icon = "circle" }),
        NPCs = Window:AddTab({ Title = "NPCs", Icon = "user" }),
        Codes = Window:AddTab({ Title = "Codes", Icon = "gift" }),
        Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
    }

    local Options = Fluent.Options

    local function getHRP()
        local char = game.Players.LocalPlayer.Character
        return char and char:FindFirstChild("HumanoidRootPart")
    end

    -- Auto Grip NPCs
    local gripLoopRunning = false
    Tabs.NPCs:AddToggle("AutoGripToggle", {
        Title = "Auto Grip NPCs",
        Default = false,
        Description = "Grips nearest npc repeatedly"
    }):OnChanged(function(val)
        gripLoopRunning = val
        task.spawn(function()
            while gripLoopRunning do
                local char = game.Players.LocalPlayer.Character
                local hrp = getHRP()
                local lives = workspace:FindFirstChild("Lives")
                if hrp and lives then
                    local closest, shortestDist = nil, math.huge
                    for _, npc in ipairs(lives:GetChildren()) do
                        local npcHRP = npc:FindFirstChild("HumanoidRootPart")
                        if npc.Name == "RegularNationNpc" and npcHRP then
                            local dist = (npcHRP.Position - hrp.Position).Magnitude
                            if dist < shortestDist then
                                closest, shortestDist = npc, dist
                            end
                        end
                    end
                    if closest then
                        local args = {"Kill", closest, hrp.Position + Vector3.new(1, 2, 0)}
                        for _ = 1, 3 do
                            char.Scripts.Server.Grip.Event:FireServer(unpack(args))
                            task.wait(0.1)
                        end
                    end
                end
                task.wait(0.5)
            end
        end)
    end)

    -- Auto Grip Players
    local playerGripLoopRunning = false
    local whitelist = { ["KINcAgU"] = true, ["topaisrare"] = true, ["xylrr"] = true }
    Tabs.Players:AddToggle("AutoGripPlayersToggle", {
        Title = "Auto Grip Players",
        Default = false,
        Description = "Spams grip on nearest player not in whitelist within 20 studs"
    }):OnChanged(function(val)
        playerGripLoopRunning = val
        task.spawn(function()
            while playerGripLoopRunning do
                local lp = game.Players.LocalPlayer
                local hrp = getHRP()
                if not hrp then task.wait(0.5) continue end
                local closest, closestDist = nil, 20
                for _, plr in ipairs(game.Players:GetPlayers()) do
                    if plr ~= lp and not whitelist[plr.Name] and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                        local dist = (plr.Character.HumanoidRootPart.Position - hrp.Position).Magnitude
                        if dist <= closestDist then
                            closest, closestDist = plr.Character, dist
                        end
                    end
                end
                if closest then
                    local args = {"Kill", closest, hrp.Position + Vector3.new(1, 2, 0)}
                    lp.Character.Scripts.Server.Grip.Event:FireServer(unpack(args))
                end
                task.wait(0.1)
            end
        end)
    end)

    -- Auto Meditate
    Tabs.Meditation:AddToggle("AutoMeditateToggle", {
        Title = "Auto Meditate",
        Default = false,
        Description = "Automatically meditates for you !!YOU HAVE TO SIT ON A MAT AND CLICK MEDITATE THEN TURN IT ON!!"
    }):OnChanged(function(val)
        task.spawn(function()
            while val do
                game.ReplicatedStorage.RemoteEvents.Meditate:FireServer("Start")
                for _ = 1, 5 do
                    game.ReplicatedStorage.RemoteEvents["Create Key"]:FireServer("Complete")
                    task.wait(0.1)
                end
                wait(1.5)
            end
        end)
    end)

    -- Code Redemption
    local spinCodes = {"wherestheavatarSpins", "25SpinsYay"}
    local elementCodes = {"flameohotman", "thatsroughbuddy", "rewrittingmaybesoon", "ElementRerollYay"}

    Tabs.Codes:AddButton({
        Title = "Redeem Spin Codes",
        Description = "Redeem all spin codes",
        Callback = function()
            for _, code in ipairs(spinCodes) do
                game:GetService("ReplicatedStorage").RemoteEvents.RedeemCode:InvokeServer(code)
                task.wait(0.5)
            end
        end
    })

    Tabs.Codes:AddDropdown("TargetElement", {
        Title = "Target Element",
        Values = {"Air", "Water", "Fire", "Earth"},
        Multi = false,
        Default = 1
    })

    Tabs.Codes:AddButton({
        Title = "Redeem Element Codes Until Desired",
        Description = "Redeems all element codes until target element is achieved",
        Callback = function()
            local target = Options.TargetElement.Value
            local player = game.Players.LocalPlayer

            while true do
                local bending = player:FindFirstChild("Bending")
                local elementValueObj = bending and bending:FindFirstChild("Value")
                local currentElement = elementValueObj and elementValueObj.Value

                if currentElement == target then
                    print("Target element achieved:", currentElement)
                    break
                end

                for _, code in ipairs(elementCodes) do
                    game.ReplicatedStorage.RemoteEvents.RedeemCode:InvokeServer(code)
                    task.wait(1)

                    bending = player:FindFirstChild("Bending")
                    elementValueObj = bending and bending:FindFirstChild("Value")
                    currentElement = elementValueObj and elementValueObj.Value

                    if currentElement == target then
                        print("Target element achieved after code:", currentElement)
                        break
                    end
                end

                task.wait(1)
            end
        end
    })

    -- Spinning (Family)
    local autoSpinRunning = false
    local families = {"Yakoda", "Sozin", "Gyatso", "Lozai", "Vaan", "Tarrlok"}

    Tabs.Spinning:AddDropdown("SpinFamily", {
        Title = "Target Families",
        Values = families,
        Multi = true,
        Default = {}
    })

    Tabs.Spinning:AddToggle("AutoSpin", {
        Title = "Auto Spin (Family)",
        Default = false,
        Description = "Spins until a selected family is achieved"
    }):OnChanged(function(val)
        autoSpinRunning = val
        task.spawn(function()
            local lp = game.Players.LocalPlayer
            while autoSpinRunning do
                local familyValueObj = lp:FindFirstChild("Family")
                local familyValue = familyValueObj and familyValueObj.Value or nil
                local selectedFamilies = Options.SpinFamily.Value

                if familyValue and table.find(selectedFamilies, familyValue) then
                    Options.AutoSpin:SetValue(false)
                    autoSpinRunning = false
                    break
                end

                game.ReplicatedStorage.RemoteEvents.Spin:FireServer("Family")
                task.wait(7.5)
            end
        end)
    end)

    -- Final Setup
    SaveManager:SetLibrary(Fluent)
    InterfaceManager:SetLibrary(Fluent)
    SaveManager:IgnoreThemeSettings()
    SaveManager:SetIgnoreIndexes({})
    InterfaceManager:SetFolder("FluentScriptHub")
    SaveManager:SetFolder("FluentScriptHub/specific-game")
    InterfaceManager:BuildInterfaceSection(Tabs.Settings)
    SaveManager:BuildConfigSection(Tabs.Settings)
    Window:SelectTab(1)
    Fluent:Notify({
        Title = "Fluent",
        Content = "Script Loaded Successfully!",
        Duration = 8
    })
    SaveManager:LoadAutoloadConfig()
end
